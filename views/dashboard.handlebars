<div class="dashboard container-fluid">
  <h2 class="posts-title">Your Posts</h2>
  {{#if posts.length}}
    <ul class="your-posts">
      {{#each posts as |post|}}
      <li>
        {{> my-post post}}
        {{!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}
      </li>
      {{/each}}
    </ul>
    {{else}}
    <h3 class="no-posts">You have no posts yet.</h3>
  {{/if}}
  <div class="row justify-content-center">
    <a href="/dashboard/new-post" class="create-post">+ New Post</a>
  </div>
</div>